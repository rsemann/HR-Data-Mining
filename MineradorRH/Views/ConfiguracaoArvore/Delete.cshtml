@model MineradorRH.Models.ConfiguracaoArvore

@{
    ViewBag.Title = "Deletar árvore";
}

<h2>Deletar árvore</h2>

<h3>Você deseja realmente excluir este registro?</h3>
<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Poda)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Poda)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>        

        <dt>
            @Html.DisplayNameFor(model => model.Sql)
        </dt>
        <dd>
            @Html.TextAreaFor(model => model.Sql, new { @id = "sql", @readonly = "readonly" })
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
    
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-success" />
            <a class="btn btn-default" href="@Url.Action("Index")">Cancelar</a>
        </div>
    }
</div>

@section Scripts {
    <script src="~/Scripts/codemirror.js"></script>
    <script src="~/Scripts/sql.js"></script>
    <script>
    $(document).ready(function () {
        var mime = 'text/x-sql';

        // get mime type
        if (window.location.href.indexOf('mime=') > -1) {
            mime = window.location.href.substr(window.location.href.indexOf('mime=') + 5);
        }

        window.editor = CodeMirror.fromTextArea(document.getElementById('sql'), {
            mode: mime,
            readOnly : true,
            indentWithTabs: true,
            smartIndent: true,
            lineNumbers: true,
            height:100,
            matchBrackets: true,
            autofocus: true
        });
    });
    </script>}