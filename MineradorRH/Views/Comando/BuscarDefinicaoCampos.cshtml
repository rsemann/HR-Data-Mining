@using MineradorRH.Extensions
@model List<MineradorRH.Models.ConfiguracaoAtributo>
@{
    ViewBag.Title = "BuscarDefinicaoCampos";
    Layout = null;
}

<hr />
<h2>Definição dos atributos</h2>

@using (Html.BeginForm("BuscarDefinicaoCampos", "Comando", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
     @Html.AntiForgeryToken()
<table class="table table-striped table-condensed table-bordered">

    <thead>
        <tr>
            @foreach (var campo in Model)
            {
                <th data-field="@campo.Nome">
                    @campo.Nome
                </th>


            }
        </tr>
    </thead>

    <tr>
        @foreach (var item in Model)
        {
            <td>
                @Html.DropDownListFor(modelItem => item.Tipo, new { @class = "teste" })
            </td>
        }
    </tr>
    <tr>
        @foreach (var item in Model)
        {
            <td>
                @Html.TextBoxFor(modelItem => item.Legenda)
            </td>
        }
    </tr>
</table>
    <div class="modal-footer">
        <input type="submit" value="Salvar e Gerar gráfico" class="btn btn-info" />
        <input type="submit" value="Salvar" class="btn btn-success" />
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
    </div>
}