@model MineradorRH.Models.StopWord

@{
    ViewBag.Title = "Deletar palavra irrelevante";
}

<h2>Deletar palavra irrelevante (stop word)</h2>

<h3>Você deseja realmente excluir este registro?</h3>
<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Palavra)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Palavra)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-success" />
            <a class="btn btn-default" href="@Url.Action("Index")">Cancelar</a>
        </div>
    }
</div>