@model MineradorRH.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "../Shared/_LoginLayout.cshtml";

}
<div align="center">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <img src="../../Content/img/logo.png" style="width: 300px" />
        <h2>FERRAMENTA PARA PREDIÇÃO DE DADOS</h2>
        <h2> PROEMINENTES DE SISTEMAS RH</h2>
        <br />
        @Html.AntiForgeryToken()
        <div class="form-group form-login">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
            <div class="col-md-4" align="center">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group form-login">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        @Html.ValidationSummary(true)
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Entrar" class="btn btn-default" style="margin-right:100px" />
            </div>
        </div>
        <p>
            Você não tem cadastro? @Html.ActionLink("Registrar", "Register")
        </p>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}